<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%- antixss(idea.title) %></strong>  <small><%- antixss(authors.get(idea.author)) %></small>  <small><%- idea.date.toDateString() %></small>
          <br>
          <%- antixss(idea.description) %>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" aria-label="delete">
            <a href="?delete=<%- i %>" class="button">Delete</a>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>