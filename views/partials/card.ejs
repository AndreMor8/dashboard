<div class="box">
  <article class="media">
    <% if(authors.get(card.userID)) { %>
    <div class="media-left">
      <figure class="image is-64x64">
        <img id="avatar" src="<%= authors.get(card.userID).avatar %>" alt="Image">
      </figure>
    </div>
    <% } %>
    <div class="media-content">
      <div class="content">
        <p>
          <% if(card.anon || !card.userID) { %>
          <strong>Anonymous</strong>
          <% } else { %>
          <strong>
            <% if(authors.get(card.userID)) { %>
            <%= authors.get(card.userID).username + " (" + card.userID + ")" %>
            <% } %>
          </strong>
          <% } %>
          <small>To: Wubbzy</small>
          <br>
          <%= card.card %>
        </p>
        <% if(card.additional) { %>
        <strong>Additional</strong><br>
        <%= card.additional %>
        <% } %>
      </div>
      <% if(admin) { %>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" aria-label="approve">
            <a href="?approve=<%- i %>" class="button">Approve</a>
          </a>
        </div>
        <div class="level-left">
          <a class="level-item" aria-label="delete">
            <a href="?delete=<%- i %>" class="button">Delete</a>
          </a>
        </div>
      </nav>
      <% } %>
    </div>
  </article>
</div>