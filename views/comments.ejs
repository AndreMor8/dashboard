<%- include('partials/header') -%>

<body>
  <meta id="_csrf" content="<%= csrfToken %>">
  <%- include('partials/nav') -%>
  <a href="/feedback" style="right: 0;padding-right: 1em; position: absolute;">
    <button class="button is-info is-light">Add new comment</button>
  </a>
  </div>
  <h1 class="title" style="margin-top: 15px; text-align: center; margin-bottom: 15px;">Pending comments for Gidget</h1>
  <div style="margin-left: 20px; margin-right: 20px">
    <% if(comments.length) { %>
    <% comments.forEach((comment, i) => { %>
    <%- include('partials/comment', { comment, i, authors, admin }) -%>
    <% }) %>
    <% } else { %>
    <h2 class="subtitle" style="text-align: center;">
      No comments yet. Create one!
    </h2>
    <% } %>
  </div>
  <script src="/events/comments.js"></script>
  <%- include('partials/footer') -%>